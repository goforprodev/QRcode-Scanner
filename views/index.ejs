<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TSCI HES 2022 QR-CODE SCANNER</title>
    <!-- un comment this to use cdn -- preferably for now -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="css/input.css"> 
    <!-- <link rel="stylesheet" href="css/styley.css"> -->
  </head>
  <body class="bg-white">
    <main class="w-full h-[50vh] bg-[#7250f2]">
      <h1 class="text-3xl font-bold text-center capitalize p-5 text-white">
        Tsci Hes 2022 Qr-Code Scanner
      </h1>
        <div
        id="qr-container"
        class="bg-white shadow-md mx-6 my-8 p-4 rounded-lg flex flex-col gap-5 h-auto"
      >
        <div id="video-container" class="py-4 flex-1">
          <video id="qr-video" class="h-full w-full border-4 border-rose-400 rounded-xl"></video>
        </div>
        <div class="button-container flex justify-around">
          <button
            id="start_btn"
            class="rounded-lg bg-rose-400 w-40 h-12 capitalize text-white font-semibold mr-3"
          >
            start
          </button>
          <button
            id="stop_btn"
            class="border-2 border-rose-400 rounded-lg w-40 h-12 capitalize text-rose-400 font-semibold"
          >
            stop
          </button>
        </div>
      </div>
    </header>

    <!-- ======HIDDEN CLASS STUFF========= -->
    <div class="hidden">
      <label>
        Highlight Style
        <select id="scan-region-highlight-style-select">
          <option value="default-style">Default style</option>
          <option value="example-style-1">Example custom style 1</option>
          <option value="example-style-2">Example custom style 2</option>
        </select>
      </label>
      <label>
        <input id="show-scan-region" type="checkbox" />
        Show scan region canvas
      </label>
    </div>
    <div class="hidden">
      <select id="inversion-mode-select">
        <option value="original">
          Scan original (dark QR code on bright background)
        </option>
      </select>
      <br />
    </div>
    <div class="hidden">
      <b>Preferred camera:</b>
      <select id="cam-list">
        <option value="environment" selected>
          Environment Facing (default)
        </option>
        <option value="user">User Facing</option>
      </select>
    </div>
    <div class="hidden">
      <b>Camera has flash: </b>
      <span id="cam-has-flash"></span>
      <div>
        <button id="flash-toggle">
          ðŸ“¸ Flash: <span id="flash-state">off</span>
        </button>
      </div>
    </div>
    <div class="hidden">
      <br />
      <b>Detected QR code: </b>
      <span id="cam-qr-result"></span>
      <br />
    </div>
    <!-- ======HIDDEN CLASS STUFF========= -->

    <div class="log-container w-full h-auto ">
        <div class="w-100% flex px-4 justify-between py-2">
        <p class="left">Scan Logs</p>
        <button id="clear_log" class="underline underline-offset-4 font-semibold text-rose-400">Clear log</button>
        </div>
        <!-- <hr /> -->
        <div id="logs" class="w-full px-4 py-2">

        </div>
    </div>
  </body>
  <script src="js/js-1.js"></script>
  <script src="js/js-2.js"></script>
  <script src="js/app.js"></script>
  <!-- <script src="js/module.js" type="module"></script> -->
</html>
